# Core app mode
DJANGO_ENV=production
DJANGO_DEBUG=false
DJANGO_SECRET_KEY=replace-with-a-strong-secret
DJANGO_ALLOWED_HOSTS=api.mobiles6g.com

# CORS and CSRF
CORS_ALLOW_ALL_ORIGINS=false
CORS_ALLOWED_ORIGINS=https://mobiles6g.com,https://www.mobiles6g.com
CSRF_TRUSTED_ORIGINS=https://mobiles6g.com,https://www.mobiles6g.com

# Database (recommended: PostgreSQL in production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=mobiles6g
DB_USER=mobiles6g_user
DB_PASSWORD=replace-with-db-password
DB_HOST=localhost
DB_PORT=5432
DB_CONN_MAX_AGE=120
DB_SSLMODE=require

# API behavior
API_PAGE_SIZE=12
API_THROTTLE_ANON=120/min
API_THROTTLE_USER=300/min

# Cache (swap to Redis in production)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=mobiles6g-cache
CACHE_TIMEOUT=300

# Security headers
SECURE_SSL_REDIRECT=true
SECURE_HSTS_SECONDS=31536000
USE_X_FORWARDED_HOST=true

# Logging
LOG_LEVEL=INFO

# Frontend
NEXT_PUBLIC_API_URL=https://api.mobiles6g.com/api
